{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "ES2021",
      "module": "commonjs",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "types": ["node", "jest"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/test"]
  }
  